Arxiv:
  queries:
    LLM:
      diy_query_str: ti:LLM OR ti:Agent OR ti:agent OR ti:llm OR ti:GPT OR ti:gpt
    NLP:
      diy_query_str: cat:cs.CL
#      target_primary_category: cs.CL
    Transformer:
      diy_query_str: ti:transformer
      target_primary_category: cs.AI
